scripts.js
function calculate() {
    let electricity = parseFloat(document.getElementById("electricity").value);
    let mileage = parseFloat(document.getElementById("mileage").value);
    let fuel = parseFloat(document.getElementById("fuel").value);
    let lpg = parseFloat(document.getElementById("lpg").value);
    let waste = parseFloat(document.getElementById("waste").value);

    let limits = {
        electricity: 116.25,
        mileage: 40,
        fuel: 16.1,
        lpg: 6,
        waste: 35
    };

    let message = "Everything is within limits! You are eco-friendly.";
    let exceed = false;

    if (electricity > limits.electricity) {
        message = "âš  Electricity usage is too high! Reduce by using energy-efficient appliances.";
        exceed = true;
    }
    if (mileage > limits.mileage) {
        message = "âš  Car mileage is high! Use public transport or carpool.";
        exceed = true;
    }
    if (fuel < limits.fuel) {
        message = "âš  Fuel efficiency is low! Maintain your vehicle properly.";
        exceed = true;
    }
    if (lpg > limits.lpg) {
        message = "âš  Too many LPG cylinders used! Optimize your cooking practices.";
        exceed = true;
    }
    if (waste > limits.waste) {
        message = "âš  Waste production is high! Reduce, reuse, recycle.";
        exceed = true;
    }

    document.getElementById("message").innerText = message;
    
    let total = limits.electricity + limits.mileage + limits.fuel + limits.lpg + limits.waste;
    let userTotal = electricity + mileage + fuel + lpg + waste;
    
    let data = [
        (electricity / total) * 100,
        (mileage / total) * 100,
        (fuel / total) * 100,
        (lpg / total) * 100,
        (waste / total) * 100
    ];

    let ctx = document.getElementById('pieChart').getContext('2d');
    new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Electricity', 'Mileage', 'Fuel', 'LPG', 'Waste'],
            datasets: [{
                data: data,
                backgroundColor: ['red', 'blue', 'green', 'yellow', 'orange']
            }]
        }
    });
}

